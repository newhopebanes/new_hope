<h1>Listing documents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Document type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.name %></td>
    <td><%= document.description %></td>
    <td><%= document.document_type_id %></td>
    <td><%= link_to 'Edit', edit_document_path(document), :class => "btn btn-mini btn-primary document-edit" %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger document-delete" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Document', new_document_path, :class => "btn btn-mini btn-success document-new" %>
