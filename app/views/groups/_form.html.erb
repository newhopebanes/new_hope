<%= simple_form_for @group do |f| %>
   <%= f.input :name %>
   <%= f.input :description, :as => :text %>
   <%= f.input :date %>
   <%= f.input :time %>
   <%= f.simple_fields_for :address do |a| %>
   
     <%= a.input :number, :label => "House Number / Name"  %>
     <%= a.input :street, :label => "Street"  %>
     <%= a.input :district, :label => "District or Area"  %>
     <%= a.input :county, :label => "County"  %>
     <%= a.input :postcode, :label => "Postcode"  %>
       
   <% end %>
    :county, :district, :number, :postcode, :street, :town
   <%= f.input :joining %>
   <%= f.input :contact %>
   <%= f.input :cost %>
   <%= f.input :access %>
   
   <%= f.button :submit, :class => 'btn-primary'  %>
   
 <% end %>
