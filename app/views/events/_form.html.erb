<%= semantic_form_for @event do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :organisation %>
    <%= f.input :description, :as => :text %>
    
    <%= f.input :contact_person %>
    <%= f.input :contact_role %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :contact, :as => :radio %>
    
    <%= f.input :date %>
    <%= f.input :time %>
    <%= f.input :ongoing %>
    <%= f.input :frequency, :as => :select  %>
    <%= f.input :day, :as => :select %>
    
    <%= f.input :cost %>
    
    <%= f.input :access, :as => :radio %>
    <%= f.input :access_details %>
    
    <%= f.input :referral, :as => :select %>
    <%= f.input :joining_process %>

  
    <%= f.input :adults, :as => :boolean, :label => "Over 18's" %>
    <%= f.input :under_18, :as => :boolean %>
    <%= f.input :target_men, :as => :boolean %>
    <%= f.input :target_women, :as => :boolean %>
    <%= f.input :target_mental_health, :as => :boolean %>
    <%= f.input :target_learning_difficulties, :as => :boolean %>
    <%= f.input :target_drug_alcohol, :as => :boolean %>
    <%= f.input :target_homelessness, :as => :boolean %>
    <%= f.input :target_carers, :as => :boolean %>
    <%= f.input :target_carers_mental_health, :as => :boolean %>
    <%= f.input :target_vulnerable, :as => :boolean %>
    <%= f.input :target_anyone, :as => :boolean %>
    <%= f.input :target_other, :as => :string %>

    <%= f.input :tag_sports, :as => :boolean %>
    <%= f.input :tag_outdoors, :as => :boolean %>
    <%= f.input :tag_creative, :as => :boolean %>
    <%= f.input :tag_wellbeing, :as => :boolean %>
    <%= f.input :tag_social, :as => :boolean %>
    <%= f.input :tag_faith, :as => :boolean %>
    <%= f.input :tag_food, :as => :boolean %>
    <%= f.input :tag_learning, :as => :boolean %>
    <%= f.input :tag_exersise, :as => :boolean %>
    <%= f.input :tag_lifestyle, :as => :boolean %>
    <%= f.input :tag_other, :as => :string %>


    
    <%= f.input :directions_walking %>
    <%= f.input :directions_bus %>
    <%= f.input :directions_train %>
    <%= f.input :directions_car %>
    
    <%= f.input :other%>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
    <%= f.action :cancel, :as => :link %>
  <% end %>
<% end %>
