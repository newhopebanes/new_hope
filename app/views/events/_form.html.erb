<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for @event do |f| %>

        <%= f.input :name %>
        <%= f.input :organisation %>
        <%= f.input :description, :as => :text, :input_html => { :rows => 3 } %>
    
        <%= f.input :contact_person %>
        <%= f.input :contact_role %>
        <%= f.input :phone %>
        <%= f.input :email %>
        <%= f.input :address %>
        <%= f.association :contact, :as => :radio_buttons %>
    
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.input :ongoing %>
        <%= f.association :frequency, :as => :select  %>
        <%= f.association :day, :as => :select %>
    
        <%= f.input :cost %>
    
        <%= f.input :access, :as => :radio, :wrapper_html => { :class => 'inline' }  %>
        <%= f.input :access_details %>
    
        <%= f.association :referral, :as => :select %>
        <%= f.input :joining_process %>

        <label class="target">How is the group for</label>
        <div class="Xtarget-left">
          <%= f.input :adults, :as => :boolean, :label => "Over 18's" %>
          <%= f.input :under_18, :as => :boolean %>
          <%= f.input :target_men, :as => :boolean %>
          <%= f.input :target_women, :as => :boolean %>
          <%= f.input :target_mental_health, :as => :boolean %>
          <%= f.input :target_learning_difficulties, :as => :boolean %>
        </div>
        <div class="Xtarget-right">  
          <%= f.input :target_drug_alcohol, :as => :boolean %>
          <%= f.input :target_homelessness, :as => :boolean %>
          <%= f.input :target_carers, :as => :boolean %>
          <%= f.input :target_carers_mental_health, :as => :boolean %>
          <%= f.input :target_vulnerable, :as => :boolean %>
          <%= f.input :target_anyone, :as => :boolean %>
        </div>
        
        <div class="Xtarget-other">  
          <%= f.input :target_other, :as => :string %>
        </div>
        
        <%= f.simple_fields_for :tagset do |t| %>
              <%= t.input :sports, :as => :boolean %>
              <%= t.input :outdoors, :as => :boolean %>
              <%= t.input :creative, :as => :boolean %>
              <%= t.input :wellbeing, :as => :boolean %>
              <%= t.input :social, :as => :boolean %>
              <%= t.input :faith, :as => :boolean %>
              <%= t.input :food, :as => :boolean %>
              <%= t.input :learning, :as => :boolean %>
              <%= t.input :exersise, :as => :boolean %>
              <%= t.input :lifestyle, :as => :boolean %>
              <%= t.input :other, :as => :string %>
        <% end %>


    
        <%= f.input :directions_walking %>
        <%= f.input :directions_bus %>
        <%= f.input :directions_train %>
        <%= f.input :directions_car %>
    
        <%= f.input :other%>

        <%= f.button :submit, :class => 'btn-primary'  %>


    <% end %>
  </div>
</div>
