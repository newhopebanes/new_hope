<div class="row">
  <div class="span12">
  <h1 class='page-title'>What's On - <%= DateTime.now.to_date.strftime(('%e %B %Y')) %>
  </div>
</div>


</br>
<div class="event-links">
  <%= link_to "All", events_path %></br>
  
  <h4>Filter by Date</h4>
  <%= link_to "Today", events_path(:day => 'true') %></br>
  <%= link_to "This week", events_path(:week => 'true') %></br>
  <%= link_to "This month", events_path(:month => 'true') %></br>
  
  <h4>Filter by Tag</h4>
  <%= link_to "Sports", events_path(:tag => 'sports') %></br>
  <%= link_to "Outdoors", events_path(:tag => 'outdoors') %></br>
  <%= link_to "Creative", events_path(:tag => 'creative') %></br>
  <%= link_to "Wellbeing", events_path(:tag => 'wellbeing') %></br>
  <%= link_to "Social", events_path(:tag => 'social') %></br>
  <%= link_to "Faith", events_path(:tag => 'faith') %></br>
  <%= link_to "Food", events_path(:tag => 'food') %></br>
  <%= link_to "Learning", events_path(:tag => 'learning') %></br>
  <%= link_to "Exercise", events_path(:tag => 'exercise') %></br>
  <%= link_to "Lifestyle", events_path(:tag => 'lifestyle') %></br>
  
  <%= link_to "Adults", events_path(:target => 'adults') %></br>
</div>

<div class="event-list">
  <% @events.each do |event| %>
    <%= render :partial => 'single_event', :locals => {:event => event} %>
  <% end %>
</div>

<br />

<% if admin %>
  <%= link_to 'New Event', new_event_path, :class => 'btn btn-success event-new' %>
<% end %>


<script type="text/javascript" charset="utf-8">
 function toggleDetails(id){

   $('.event-summary_' + id).toggle();

   $('.event-details_' + id).toggle();
 };
</script>